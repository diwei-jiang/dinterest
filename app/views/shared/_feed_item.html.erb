<div class="box">
  <p><%= link_to (image_tag feed_item.url), feed_item %></p>
  <p class="description"><%= feed_item.description %></p>
  <p>
    Tag: <%= raw feed_item.tags.map(&:name).map { |t| link_to t, '#' }.join(', ') %>
  </p>
    <p><strong>Pined in 
    <%= link_to feed_item.board.name, 
                board_path(feed_item.board_id) %> 
    by 
    <%= link_to feed_item.user.name, feed_item.user %></strong>
    </p>
  <p>
    <%= link_to 'Show', feed_item, class: "btn btn-default btn-xs"%>

    <%= link_to "Repin", 
            new_pin_path(pin_id: feed_item.id, repin_id: feed_item.repin_id),
            class: "btn btn-warning btn-xs" %>
    <% if current_user == feed_item.user %>
    <%= link_to 'Destroy', feed_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
    <% end %><br>
    <div class="timestamp">
    <%= time_ago_in_words(feed_item.created_at) %> ago.
    </div>
  </p>
</div>