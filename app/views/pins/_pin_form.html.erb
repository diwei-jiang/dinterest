<%= form_for(@pin) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

  <% if @pin.url.nil? %>
    <%= f.label :url %>
    <%= f.text_field :url %>

    <br><strong>or</strong><br>
      
    <%= f.label :upload %><br>
    <%= f.file_field :image_file %>
  <% else %>
    <%= f.label :url %>
    <%= f.text_field :url, :readonly => true, :value => @pin.url %>
    <%= f.label 'repin from' %>
    <%= f.text_field :repin_id, :readonly => true, :value => @pin.repin_id %>
  <% end %>

  <%= f.label :board %>
  <%= f.select :board, @boards.map { |b| b.name } %>

  <%= f.label :description %>
  <%= f.text_area :description, 
                  placeholder: "Say something about this pin..." %>


  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>