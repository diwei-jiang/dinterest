<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-lg-4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="col-lg-8">
    <% if @user.boards.any? %>
      <h3>boards (<%= @user.boards.count %>)</h3>
      <ol class="boards">
        <%= render @boards %>
      </ol>
      <%= will_paginate @boards, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>